#include <stdio.h>
using namespace std;

int main(int argc, char** argv)
{
	int num = 0;
	int lim = num;
	int c;
	
	
	for(c=0; c<30; c++){
		while(num  < lim);{
			printf("Digite um numero \n");
			scanf("%d", &num);
			printf("\n");
		if(num % 2  == 0){
			printf("%d E um numero PAR \n", num);
	}
		else{
			printf("%d E um numero IMPAR \n", num);
	}

	} 	
	}
	
	return 0;
}
